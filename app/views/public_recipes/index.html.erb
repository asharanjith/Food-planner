
<% if @recipes.length == 0 %>
 <h1>There is no public recipe yet</h1>
<% else %>
    <h1> Public Recipes</h1> 

    <div id="recipes">
    <% @recipes.each do |recipe| %>
        
            <% if recipe.public == true %>
                <%= render partial: 'recipes/recipe_table' %>                
            <% end %>       
        
    <% end %>
    </div>
<% end %>

<% if !user_signed_in? %>
    <h4> Please <%= link_to "sign up", new_user_registration_path %> or <%= link_to "log in",user_session_path %>  to see the recipes </h4>
<% end %>





